{
    "window.title": "${dirty}${activeEditorShort}",
    "editor.smoothScrolling": true,
    "explorer.confirmDelete": false,
    "explorer.compactFolders": false,
    "files.autoSave": "afterDelay",

    "git.enabled": true,
    "editor.codeLens": true,
    "editor.hover.delay": 1500,
    "editor.hover.enabled": "on",
    "editor.matchBrackets": "never",
    "editor.colorDecorators": false,
    "git.decorations.enabled": true,

    "workbench.startupEditor": "none",
    "editor.lightbulb.enabled": "off",
    "editor.selectionHighlight": false,
    "editor.overviewRulerBorder": false,
    "editor.renderLineHighlight": "all",
    "editor.occurrencesHighlight": "off",
    "problems.decorations.enabled": false,
    "editor.renderControlCharacters": false,
    "editor.hideCursorInOverviewRuler": true,

    "editor.gotoLocation.multipleReferences": "goto",
    "editor.gotoLocation.multipleDefinitions": "goto",
    "editor.gotoLocation.multipleDeclarations": "goto",
    "editor.gotoLocation.multipleImplementations": "goto",
    "editor.gotoLocation.multipleTypeDefinitions": "goto",
    
    "editor.tabSize": 2,
    "editor.minimap.enabled": false,
    "window.customTitleBarVisibility": "windowed",
    "editor.stickyScroll.enabled": false,
    
    /** ------------------ Window / UI Settings ------------------ **/
    "workbench.tips.enabled": false,
    "workbench.editor.showTabs": "none",
    "workbench.statusBar.visible": false,
    "workbench.activityBar.location": "bottom",
    "workbench.navigationControl.enabled": false,
    "workbench.editor.editorActionsLocation": "hidden",
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "workbench.secondarySideBar.defaultVisibility": "hidden",

    /** --------------- VS Code Extensions Settings -------------- **/
    "liveServer.settings.donotShowInfoMsg": true,
    "liveServer.settings.ChromeDebuggingAttachment": false,
    "liveServer.settings.AdvanceCustomBrowserCmdLine": "chrome",

    "vscode-pets.petSize": "small",
    "vscode-pets.theme": "forest",
    "vscode-pets.throwBallWithMouse": true,

    "github.copilot.nextEditSuggestions.enabled": false,
    "chat.commandCenter.enabled": false,

    "workbench.colorTheme": "One Dark Pro Darker",
    "workbench.iconTheme": "material-icon-theme",

    /** --------------- Breadcrumbs Configurations --------------- **/
    "breadcrumbs.enabled": false,
    "breadcrumbs.symbolPath": "off",
    "breadcrumbs.filePath": "on",

    /** ----------------- Terminal Configurations ---------------- **/
    "terminal.integrated.defaultProfile.linux": "zsh",
    "terminal.integrated.fontSize": 14,
    "terminal.integrated.enableMultiLinePasteWarning": "always",
    "terminal.integrated.cursorStyle": "underline",
    "terminal.integrated.cursorBlinking": true,

    /** ------------ Visual Studio Code Customization ------------ **/
    "vscode_custom_css.imports": [
        "file:///home/osorex/.vscode/custom-vscode.css",
        "file:///home/osorex/.vscode/custom-vscode.js"
    ],
    "github.copilot.enable": {
        "*": false,
        "plaintext": false,
        "markdown": false,
        "scminput": false
    }
}